{
  "name": "react-policies",
  "version": "0.3.2",
  "description": "A policy based access control for React components.",
  "main": "lib/index.js",
  "files": [
    "*.md",
    "LICENSE",
    "lib",
    "src"
  ],
  "scripts": {
    "build": "mkdir -p lib && babel ./src --out-dir ./lib",
    "lint": "eslint src",
    "prepublish": "rm -rf lib && npm run test && npm run build",
    "test": "jest --verbose --no-cache",
    "test:watch": "jest --watch=all --verbose --no-cache --onlyChanged",
    "ci": "npm run lint && npm run test"
  },
  "authors": [
    "Lucas Constantino Silva"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "^10.0.1",
    "babel-istanbul": "0.12.2",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.9.2",
    "enzyme": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-rackt": "^1.1.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.7.1",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.1.0"
  },
  "peerDependencies": {
    "react": "^16.1.0",
    "prop-types": "^15.6.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "react",
      "enzyme"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasconstantino/react-policies.git"
  },
  "keywords": [
    "react",
    "policy",
    "policies",
    "auth",
    "access",
    "hoc"
  ],
  "bugs": {
    "url": "https://github.com/lucasconstantino/react-policies/issues"
  },
  "homepage": "https://github.com/lucasconstantino/react-policies#readme",
  "dependencies": {
    "enzyme-adapter-react-16": "^1.1.1"
  }
}
